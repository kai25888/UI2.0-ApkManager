<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".CleanOrStopAppActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="93dip"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/ll_app_stop_select"
            android:layout_width="wrap_content"
            android:layout_height="99dp"
            android:background="@drawable/ll_select_bg"
            android:focusable="true"
            android:orientation="horizontal"
            android:paddingLeft="10dip"
            android:paddingRight="25dip" >

            <ImageView
                android:id="@+id/iv_app_top_back"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/backstage_focus"
                android:contentDescription="@string/img"
                android:focusable="false" />

            <TextView
                android:id="@+id/tv_app_top_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:gravity="center_vertical"
                android:text="@string/appstarting"
                android:textColor="@color/white"
                android:textSize="27sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_app_clean_select"
            android:layout_width="wrap_content"
            android:layout_height="99dp"
            android:background="@drawable/ll_select_bg"
            android:focusable="true"
            android:orientation="horizontal"
            android:paddingLeft="10dip"
            android:paddingRight="25dip" >

            <ImageView
                android:id="@+id/iv_app_top_clean"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/cleancache"
                android:contentDescription="@string/img"
                android:focusable="false" />

            <TextView
                android:id="@+id/tv_app_top_clean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:gravity="center_vertical"
                android:text="@string/cleancache"
                android:textColor="#50ffffff"
                android:textSize="27sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="93dp"
        android:contentDescription="@string/img"
        android:focusable="false"
        android:src="@drawable/all_top_line" />

    <android.support.v4.view.ViewPager
        android:id="@+id/clean_apk_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="94dp"
        android:clickable="true"
        android:focusable="true" />

</FrameLayout>