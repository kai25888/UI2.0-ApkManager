<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    android:scaleType="fitXY" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="154dp" >

        <FrameLayout
            android:id="@+id/login_fl_1"
            android:layout_width="376dp"
            android:layout_height="468dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="87dp"
            android:background="@drawable/main_focus_highlight"
            android:focusable="true" >

            <ImageView
                android:id="@+id/login_iv_uninstall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/uninstall"
                android:clickable="false"
                android:contentDescription="@string/img"
                android:focusable="false" />

            <TextView
                android:id="@+id/login_tv_uninstall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="228dp"
                android:ellipsize="marquee"
                android:gravity="center_horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/uninstall"
                android:textColor="@color/main_word"
                android:textSize="27sp"
                android:textStyle="normal"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/login_fl_2"
            android:layout_width="376dp"
            android:layout_height="468dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/main_focus_highlight"
            android:focusable="true" >

            <ImageView
                android:id="@+id/login_iv_install"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/install"
                android:clickable="false"
                android:contentDescription="@string/img"
                android:focusable="false" />

            <TextView
                android:id="@+id/login_tv_install"
                android:layout_width="220dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="228dp"
                android:ellipsize="marquee"
                android:gravity="center_horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/install"
                android:textColor="@color/main_word"
                android:textSize="27sp"
                android:textStyle="normal"
                android:focusable="true" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/login_fl_3"
            android:layout_width="376dp"
            android:layout_height="468dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="87dp"
            android:background="@drawable/main_focus_highlight"
            android:focusable="true" >

            <ImageView
                android:id="@+id/login_iv_appatv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/clean"
                android:clickable="false"
                android:contentDescription="@string/img"
                android:focusable="false" />

            <TextView
                android:id="@+id/login_tv_exit"
                android:layout_width="220dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="228dp"
                android:ellipsize="marquee"
                android:gravity="center_horizontal"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/clean"
                android:textColor="@color/main_word"
                android:textSize="27sp"
                android:textStyle="normal"
                android:focusable="true"/>
        </FrameLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_install_top_sys"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/small_login"
        android:contentDescription="@string/img"
        android:focusable="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="134dp"
        android:layout_marginTop="40dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="27sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="93dp"
        android:contentDescription="@string/img"
        android:focusable="false"
        android:src="@drawable/all_top_line" />

</FrameLayout>